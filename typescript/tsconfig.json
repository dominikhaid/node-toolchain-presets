{
  "compilerOptions": {
    "rootDir": "src",
    "types": ["node"],
    "typeRoots": ["types"],
    "outDir": "build",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "sourceMap": true,
    "listFiles": false,
    "noImplicitAny": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "removeComments": true,
    "noEmit": false
  },
  "include": ["src", "types/common/main.d.ts", "types/common/interfaces.d.ts"],
  "exclude": [
    "**/*/node_modules",
    "**/*/log",
    "**/*/.git",
    "**/*/out",
    "**/*/static",
    "**/*/coverage",
    "**/*/dist",
    "**/*/lib"
  ]
}
